{
  "name": "typescript-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@11.11.0",
  "prettier": "@hardlydifficult/ts-config/prettier",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build:tooling": "npm --workspace @hardlydifficult/ts-config run build",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "npm run build:tooling && eslint --config .config/eslint.config.js packages/ && npm run validate:manifests",
    "lint:fix": "npm run build:tooling && eslint --config .config/eslint.config.js packages/ --fix",
    "format": "npm run build:tooling && prettier --write \"packages/**/*.ts\"",
    "format:check": "npm run build:tooling && prettier --check \"packages/**/*.ts\"",
    "fix": "npm run lint:fix && npm run format",
    "clean": "turbo run clean",
    "validate:manifests": "node ./scripts/validate-package-manifests.mjs"
  },
  "devDependencies": {
    "@eslint/compat": "2.0.2",
    "@eslint/js": "10.0.1",
    "@types/node": "25.3.2",
    "eslint": "10.0.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "62.7.1",
    "eslint-plugin-unused-imports": "4.4.1",
    "prettier": "3.8.1",
    "turbo": "2.8.12",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.1",
    "vite": "7.3.1"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
