{
  "name": "typescript-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.9.4",
  "prettier": "@hardlydifficult/ts-config/prettier",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "eslint --config .config/eslint.config.js packages/",
    "lint:fix": "eslint --config .config/eslint.config.js packages/ --fix",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "fix": "npm run lint:fix && npm run format",
    "clean": "turbo run clean",
    "docs": "typedoc",
    "docs:agent": "node packages/ci-scripts/dist/generate-llms-txt.js"
  },
  "devDependencies": {
    "@eslint/compat": "2.0.2",
    "@eslint/js": "10.0.1",
    "@types/node": "20.19.31",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import-x": "4.16.1",
    "prettier": "3.5.3",
    "turbo": "2.8.2",
    "typedoc": "0.28.17",
    "typescript": "5.8.3",
    "typescript-eslint": "8.55.0"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}
