{
  "name": "@hardlydifficult/storybook-components",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "lint": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "screenshots": "node scripts/capture-screenshots.js",
    "clean": "node --eval \"fs.rmSync('dist', { recursive: true, force: true }); fs.rmSync('storybook-static', { recursive: true, force: true })\""
  },
  "dependencies": {
    "lightweight-charts": "5.1.0",
    "react": ">=19.2.4",
    "react-dom": ">=19.2.4",
    "react-markdown": "10.1.0"
  },
  "devDependencies": {
    "@storybook/react-vite": "10.2.13",
    "@tailwindcss/vite": "4.2.1",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "agent-browser": "0.15.1",
    "storybook": "10.2.13",
    "tailwindcss": "4.2.1",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  },
  "peerDependencies": {
    "react": ">=19.2.4",
    "react-dom": ">=19.2.4"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./index.css": "./dist/index.css",
    "./dist/index.css": "./dist/index.css",
    "./tokens.css": "./dist/tokens.css",
    "./dist/tokens.css": "./dist/tokens.css"
  }
}
