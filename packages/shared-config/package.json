{
  "name": "@hardlydifficult/shared-config",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "postinstall": "node -e \"try{require('./dist/postinstall.js')}catch{}\"",
    "copy-skills": "tsx src/copy-skills.ts",
    "sync-external-skills": "tsx src/sync-external-skills.ts",
    "prebuild": "npm run copy-skills && npm run sync-external-skills"
  },
  "files": ["dist", "files", "external-skills.txt"],
  "devDependencies": {
    "@types/node": "25.2.2",
    "tsx": "4.19.2",
    "typescript": "5.8.3"
  }
}
