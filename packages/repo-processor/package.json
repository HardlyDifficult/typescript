{
  "name": "@hardlydifficult/repo-processor",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "node --eval \"fs.rmSync('dist', { recursive: true, force: true })\""
  },
  "dependencies": {
    "@hardlydifficult/collections": "file:../collections",
    "@hardlydifficult/github": "file:../github",
    "@hardlydifficult/state-tracker": "file:../state-tracker",
    "@hardlydifficult/text": "file:../text",
    "simple-git": "3.32.3",
    "yaml": "2.8.2",
    "zod": "4.3.6"
  },
  "peerDependencies": {
    "@hardlydifficult/collections": "*",
    "@hardlydifficult/github": "*",
    "@hardlydifficult/state-tracker": "*",
    "@hardlydifficult/text": "*"
  },
  "devDependencies": {
    "@types/node": "25.3.2",
    "typescript": "5.9.3",
    "vitest": "4.0.18",
    "@vitest/coverage-v8": "4.0.18"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  }
}
