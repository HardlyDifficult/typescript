{
  "name": "@hardlydifficult/ci-scripts",
  "version": "1.0.0",
  "description": "Reusable CI scripts",
  "bin": {
    "check-pinned-deps": "./dist/check-pinned-deps.js",
    "monorepo-publish": "./dist/publish.js",
    "auto-commit-fixes": "./dist/auto-commit-fixes.js",
    "check-package-metadata": "./dist/check-package-metadata.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "node --eval \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "25.3.0",
    "typescript": "5.9.3"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=20.19.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  }
}
